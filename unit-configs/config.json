{
    "listeners": {
        "*:8080": {
            "pass": "routes",
            "forwarded": {
                "client_ip": "CF-Connecting-IP",
                "recursive": false,
                "source": [
                    "173.245.48.0/20",
                    "103.21.244.0/22",
                    "103.22.200.0/22",
                    "103.31.4.0/22",
                    "141.101.64.0/18",
                    "108.162.192.0/18",
                    "190.93.240.0/20",
                    "188.114.96.0/20",
                    "197.234.240.0/22",
                    "198.41.128.0/17",
                    "162.158.0.0/15",
                    "104.16.0.0/13",
                    "104.24.0.0/14",
                    "172.64.0.0/13",
                    "131.0.72.0/22",
                    "2400:cb00::/32",
                    "2606:4700::/32",
                    "2803:f800::/32",
                    "2405:b500::/32",
                    "2405:8100::/32",
                    "2a06:98c0::/29",
                    "2c0f:f248::/32"
                ]
            }
        }
    },
    "routes": [
        {
            "match": {
                "uri": "/app/*"
            },
            "action": {
                "proxy": {
                    "uri": "http://127.0.0.1:9000",
                    "websocket": true
                },
                "headers": {
                    "Host": "$host",
                    "Scheme": "$scheme",
                    "SERVER_PORT": "$server_port",
                    "REMOTE_ADDR": "$remote_addr",
                    "X-Forwarded-For": "$remote_addr",
                    "Upgrade": "$http_upgrade",
                    "Connection": "$connection"
                }
            }
        },
        {
            "match": {
                "uri": "/healthcheck"
            },
            "action": {
                "return": 200
            }
        },
        {
            "match": {
                "uri": "!/index.php"
            },
            "action": {
                "share": "/var/www/html/public$uri",
                "fallback": {
                    "pass": "applications/php"
                }
            }
        }
    ],
    "applications": {
        "php": {
            "type": "php",
            "root": "/var/www/html/public/",
            "script": "index.php",
            "processes": {
                "max": 20,
                "spare": 2,
                "idle_timeout": 30
            }
        }
    },
    "access_log": {
        "if": "`${uri == '/healthcheck' ? false : true}`",
        "path": "/dev/stdout"
    }
}
